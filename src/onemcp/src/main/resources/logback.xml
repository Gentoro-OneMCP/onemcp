<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Externalize log level with system property LOG_LEVEL (default INFO) -->
    <property name="LOG_LEVEL" value="${LOG_LEVEL:-INFO}"/>
    <property name="APP_NAME" value="${APP_NAME:-java-orchestrator}"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger -->
    <root level="${LOG_LEVEL}">
        <appender-ref ref="STDOUT"/>
    </root>

    <!-- Package-specific tuning (reduce noise from HTTP, etc.) -->
    <logger name="org.eclipse.jetty" level="WARN"/>
    <logger name="okhttp3" level="INFO"/>
    <logger name="io.modelcontextprotocol" level="INFO"/>
    <logger name="com.gentoro.onemcp" level="${LOG_LEVEL}"/>
    <logger name="com.google.genai" level="OFF"/>
</configuration>
